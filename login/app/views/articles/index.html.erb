<h1 align='center'>Listing articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @article.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Edit' , edit_article_path(article) %>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Destroy',article_path(article),method: :delete, data: {confirm: "Are u sure?"}%></td>
    </tr>
  <% end %>
</table>


